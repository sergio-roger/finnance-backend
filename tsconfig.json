{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"rootDir": "src",
		"outDir": "dist",
		"baseUrl": "src",
		"typeRoots": ["./src/config/types", "./node_modules/@types"],
		"paths": {
			"@modules/*": ["modules/*"],
			"@config/*": ["config/*"],
			"@utils/*": ["utils/*"],
			"@middlewares/*": ["middlewares/*"],
			"@docs/*": ["docs/*"]
		},
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["src"]
}
